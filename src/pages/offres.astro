---
import Layout from '../layouts/Layout.astro';
---

<Layout titre="Offres disponibles">
    <div class="space-y-8">
        <div class="text-center space-y-2">
            <h1 class="text-3xl font-bold text-slate-900">Offres disponibles</h1>
            <p class="text-slate-600">Une petite sélection prête à visiter.</p>
        </div>

        <div class="grid md:grid-cols-3 gap-4">
            <div class="bg-white border border-slate-200 rounded p-5 space-y-2">
                <div class="h-32 bg-slate-200 flex items-center justify-center text-slate-500 text-xs">Photo</div>
                <h3 class="text-lg font-semibold text-slate-900">T2 centre-ville</h3>
                <p class="text-slate-600 text-sm">52 m² · Balcon · 2 pièces</p>
                <p class="text-base font-bold text-slate-800">249 000 €</p>
            </div>

            <div class="bg-white border border-slate-200 rounded p-5 space-y-2">
                <div class="h-32 bg-slate-200 flex items-center justify-center text-slate-500 text-xs">Photo</div>
                <h3 class="text-lg font-semibold text-slate-900">Maison avec jardin</h3>
                <p class="text-slate-600 text-sm">138 m² · 6 pièces · Garage</p>
                <p class="text-base font-bold text-slate-800">469 000 €</p>
            </div>

            <div class="bg-white border border-slate-200 rounded p-5 space-y-2">
                <div class="h-32 bg-slate-200 flex items-center justify-center text-slate-500 text-xs">Photo</div>
                <h3 class="text-lg font-semibold text-slate-900">Loft industriel</h3>
                <p class="text-slate-600 text-sm">94 m² · Plateau ouvert</p>
                <p class="text-base font-bold text-slate-800">389 000 €</p>
            </div>
        </div>
    </div>
</Layout>
